<apex:page controller="ConnectedDeviceLookupController" title="Search" showHeader="false" sideBar="false" tabStyle="Management_IP_Port_Assignment__c" id="pg" >

    <script type="text/javascript">
    function selectItem(id, name) {
        top.window.opener.lookupPick2('{!FormTag}', '{!TextBox}_lkid', '{!TextBox}', id, name, false);
    }
    </script>
    
    <apex:form >
        <apex:actionFunction name="createManagementIP" action="{! createManagementIPPortAssignment }" oncomplete="selectItem('{!currentPortAssignment.Id}','{!currentPortAssignment.Name__c}')" rerender="page">
            <apex:param id="ip" name="curIP" value="" />
            <apex:param id="deviceType" name="curDeviceType" value="" />
            <apex:param id="devicePort" name="curDevicePort" value="" />
        </apex:actionFunction>
        <apex:outputPanel id="page" layout="block" style="margin:5px;padding:10px;padding-top:2px;">
            <apex:actionRegion >  
                <apex:outputPanel id="top" layout="block" style="margin:5px;padding:10px;padding-top:2px;">
                    <apex:outputLabel value="Search" style="font-weight:Bold;padding-right:10px;" for="txtSearch"/>
                    <apex:inputText id="txtSearch" value="{!searchString}" />
                    <span style="padding-left:5px"><apex:commandButton value="Go" action="{! Search }" rerender="page"></apex:commandButton></span>
                    <span style="padding-left:5px"><apex:commandButton value="Back" action="{! unsetManagementIP }" rerender="page" rendered="{! managementIPId != null }"></apex:commandButton></span>
                    <apex:outputText value="Selected Device: {! managementIP.Name } ({! managementIP.Domain__c })" style="padding-left:5px;font-weight:Bold;padding-top:2px" rendered="{! managementIPId != null }" />
                </apex:outputPanel>
                
                <apex:outputPanel style="margin:10px;height:350px;overflow-Y:auto;" layout="block" rendered="{! managementIPId == null }">
                    <apex:pageBlock > 
                        <apex:pageBlockTable value="{! managementIPResults }" var="a" id="tblResults">
                            <apex:column >
                                <apex:facet name="header">
                                    <apex:outputPanel >IP Address</apex:outputPanel>
                                </apex:facet>
                                <apex:commandLink action="{! setManagementIP }" rerender="page">
                                    <apex:param value="{! a.Id }" assignTo="{! managementIPId }" name="managementIPId" />
                                    {! a.Name }
                                </apex:commandLink>
                            </apex:column>
                            <apex:column >
                                <apex:facet name="header">
                                    <apex:outputPanel >Domain</apex:outputPanel>
                                </apex:facet>
                                {! a.Domain__c }
                            </apex:column>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </apex:outputPanel>
                
                <apex:outputPanel style="margin:10px;height:350px;overflow-Y:auto;" layout="block" rendered="{! managementIPId != null }">
                    <apex:pageBlock > 
                        <apex:pageBlockTable value="{! managementIPPortAssignmentResults }" var="a" id="tblResults">
                            <apex:column >
                                <apex:facet name="header">
                                    <apex:outputPanel >Port</apex:outputPanel>
                                </apex:facet>
                                <apex:outputLink value="javascript:top.window.opener.lookupPick2('{!FormTag}', '{!TextBox}_lkid', '{!TextBox}', '{!a.portAssignment}', '{!a.Name}', false);" rendered="{! a.portAssignment != null }">
                                    {! a.Name }
                                </apex:outputLink>
                                <apex:outputLink value="javascript:createManagementIP('{!a.managementIP}','{!a.managementDevice}','{!a.devicePortAssignment}')" rendered="{! a.portAssignment == null }">
                                    {! a.Name }
                                </apex:outputLink>
                            </apex:column>
                            <apex:column >
                                <apex:facet name="header">
                                    <apex:outputPanel >Description</apex:outputPanel>
                                </apex:facet>
                                {! a.Description }
                            </apex:column>
                            <apex:column >
                                <apex:facet name="header">
                                    <apex:outputPanel >Connected Device</apex:outputPanel>
                                </apex:facet>
                                {! a.connectedDevice }
                            </apex:column>
                        </apex:pageBlockTable>
                    </apex:pageBlock>
                </apex:outputPanel>
                
            </apex:actionRegion>
        </apex:outputPanel>
    </apex:form>
</apex:page>