<apex:page standardController="Direct_Debit__c" extensions="DirectDebitController">
    <apex:sectionHeader title="Direct Debit Edit" subtitle="New Direct Debit" help=""/>
    
    <apex:form >
        <apex:pageBlock mode="edit" title="Direct Debit Edit">
            
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{! save }"/>
                <apex:commandButton value="Cancel" action="{! cancel }"/>
            </apex:pageBlockButtons>
            
            <apex:pageMessages />
            
            <apex:pageBlockSection columns="1" >
                <apex:inputField value="{! Direct_Debit__c.Account__c }" required="true" />
                <apex:inputField value="{! Direct_Debit__c.Name }" />
            </apex:pageBlockSection>
            
        </apex:pageBlock>
    </apex:form>
    
    <apex:includeScript value="/support/console/20.0/integration.js"/>
    <script type="text/javascript">
        function testSetTabTitle() {
            //Set the current tab's title
            sforce.console.setTabTitle('New Direct Debit');
        }
        var pageLoad = window.onload;
        window.onload = function() {
            if (pageLoad) {
                pageLoad();
            }
            testSetTabTitle();
        }
        </script>
    
</apex:page>