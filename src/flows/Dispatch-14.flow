        <locationX>342</locationX>
        <locationY>187</locationY>
        <defaultConnector>
            <targetReference>Not_Scheduled</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not Scheduled</defaultConnectorLabel>
        <rules>
            <name>Is_Scheduled</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>ServiceAppointmentStatus</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Scheduled</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Lookup_User</targetReference>
            </connector>
            <label>Is Scheduled</label>
        </rules>
    </decisions>
