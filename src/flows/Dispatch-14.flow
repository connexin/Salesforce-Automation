        <defaultConnector>
            <targetReference>Lookup_Contact</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Has Contact</defaultConnectorLabel>
        <rules>
            <name>Does_not_Have_Contact</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>ContactId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <elementReference>Does_not_Have_Contact</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Dispatch_Service_Appointment</targetReference>
            </connector>
            <label>Does not Have Contact</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Service_Appointment_Status_is_Scheduled</name>
