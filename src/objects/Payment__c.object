    <validationRules>
        <fullName>Amount_Allocated_Less_Zero</fullName>
        <active>true</active>
        <errorConditionFormula>Amount_Allocated__c &lt; 0</errorConditionFormula>
        <errorDisplayField>Amount_Allocated__c</errorDisplayField>
        <errorMessage>Amount Allocated cannot be less than 0</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Amount_Allocated_More_Amount</fullName>
        <active>true</active>
        <errorConditionFormula>Amount_Allocated__c &gt; Amount__c</errorConditionFormula>
        <errorDisplayField>Amount_Allocated__c</errorDisplayField>
        <errorMessage>Amount Allocated cannot be greater than Payment Amount</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Amount_Is_Positive</fullName>
        <active>true</active>
        <errorConditionFormula>Amount__c &lt; 0</errorConditionFormula>
        <errorMessage>Amount cannot be negative</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Prevent_Draft_Confirmed</fullName>
        <active>true</active>
        <errorConditionFormula>AND(Confirmed__c = True, Draft__c = True)</errorConditionFormula>
        <errorDisplayField>Confirmed__c</errorDisplayField>
        <errorMessage>A payment cannot be Confirmed whistl it is in Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Prevent_Reverse_Validation</fullName>
        <active>true</active>
        <errorConditionFormula>AND(Draft__c == True, NOT(ISNEW()), ISCHANGED(Draft__c))</errorConditionFormula>
        <errorDisplayField>Draft__c</errorDisplayField>
        <errorMessage>Payment cannot be reverted to Draft Status once it has been validated</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Prevent_Zero_Total</fullName>
        <active>true</active>
        <errorConditionFormula>AND(AND(Draft__c == False, NOT(ISNEW()), ISCHANGED(Draft__c)), Amount__c == 0)</errorConditionFormula>
        <errorMessage>Payment must be Draft if amount is 0</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Account</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Account__c), Draft__c = False)</errorConditionFormula>
        <errorDisplayField>Account__c</errorDisplayField>
        <errorMessage>Account cannot be changed on a Payment what is not in Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Amount</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Amount__c), Draft__c = False)</errorConditionFormula>
        <errorMessage>Amount cannot be changed on a Payment that is not in Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Confirmed</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Confirmed__c), Confirmed__c = False, Draft__c = False)</errorConditionFormula>
        <errorDisplayField>Confirmed__c</errorDisplayField>
        <errorMessage>A payment cannot be un-confirmed</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Date</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Date__c), Draft__c = False)</errorConditionFormula>
        <errorDisplayField>Date__c</errorDisplayField>
        <errorMessage>Date cannot be changed on a Payment that is not in Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Reference</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Reference__c), Draft__c = False)</errorConditionFormula>
        <errorDisplayField>Reference__c</errorDisplayField>
        <errorMessage>Reference cannot be changed on a Payment that is not in Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Protect_Non_Draft_Source</fullName>
        <active>true</active>
        <errorConditionFormula>AND(ISCHANGED(Source__c), Draft__c = False)</errorConditionFormula>
        <errorDisplayField>Source__c</errorDisplayField>
        <errorMessage>Source cannot be changed on a Payment that is not Draft</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Validate_Date</fullName>
        <active>false</active>
        <errorConditionFormula>AND( ISCHANGED(Draft__c) , Draft__c == False, Date__c &lt; DATEVALUE(NOW()))</errorConditionFormula>
        <errorDisplayField>Date__c</errorDisplayField>
        <errorMessage>Payment Date cannot be in the past</errorMessage>
    </validationRules>
